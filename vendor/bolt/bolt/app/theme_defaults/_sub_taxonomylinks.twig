{% if record.taxonomy is defined %}
    <ul class="tags">
    {% for type, values in record.taxonomy %}
        {% for link, value in values %}
            <li><a href="{{ link }}">{{ value }}</a></li>
        {% else %}
            {{ __('general.phrase.none') }}
        {% endfor %}
        {% if not loop.last %} - {% endif %}
    {% endfor %}
    </ul>
{% endif %}